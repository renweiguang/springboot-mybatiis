<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <!--多个酒店查询价格计划-->
    <bean id="queryRatePlanExecutor"
          class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="threadNamePrefix" value="queryRatePlan-"/>
        <property name="corePoolSize" value="5"/>
        <property name="keepAliveSeconds" value="10"/>
        <property name="maxPoolSize" value="10"/>
        <property name="queueCapacity" value="50000"/>
    </bean>
    <!--价格计划转化-->
    <bean id="incrRatePlanBatchTaskExecutor"
          class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="threadNamePrefix" value="incrRatePlanBatch-Exec-"/>
        <property name="corePoolSize" value="10"/>
        <property name="keepAliveSeconds" value="10"/>
        <property name="maxPoolSize" value="30"/>
        <property name="queueCapacity" value="50000"/>
    </bean>
    <!--  异步下单 -->
    <bean id="viennaBookingPool" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="threadNamePrefix" value="viennaBookingPool-"/>
        <property name="corePoolSize" value="5"/>
        <property name="keepAliveSeconds" value="10"/>
        <property name="maxPoolSize" value="5"/>
        <property name="queueCapacity" value="20"/>
    </bean>


</beans>